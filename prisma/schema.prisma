generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Medicines {
  id              Int      @id @default(autoincrement())
  nome            String   @unique
  descricao       String
  age_rule        Int
  alergy_rule     Alergiess[]
  max_weight_rule Float
  min_weight_rule Float
  min_height_rule Float
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Alergiess {
  id          Int        @id @default(autoincrement())
  name        String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  Medicamento Medicines? @relation(fields: [medicineId], references: [id])
  medicineId  Int?
}
